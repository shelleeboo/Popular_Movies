<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="Labels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/med_margin</item>
    </style>

    <style name="featuredText">
        <item name="android:layout_width">@dimen/no_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="synopsis">
        <item name="android:layout_width">@dimen/no_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/med_margin</item>
        <item name="android:layout_marginStart">@dimen/med_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/med_margin</item>
        <item name="android:layout_marginEnd">@dimen/med_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="topMovie">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_below">@id/iv_movie_poster</item>
    </style>

    <style name="topMoviePoster">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">246dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="backdropImage">
        <item name="android:layout_width">@dimen/no_width</item>
        <item name="android:layout_height">@dimen/no_height</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="posterImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginBottom">@dimen/med_margin</item>
        <item name="android:layout_marginStart">@dimen/med_margin</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="barrier">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
